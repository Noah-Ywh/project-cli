{
  "name": "@noahyu/project-cli",
  "version": "1.0.0",
  "description": "Command line interface (CLI) for quick project creation",
  "type": "module",
  "main": "./dist/bin/cli.js",
  "files": [
    "/dist",
    "/template"
  ],
  "bin": {
    "pcli": "./dist/bin/cli.js"
  },
  "scripts": {
    "build": "rollup -c -w",
    "changelog": "conventional-changelog -n './changelog.config.cjs' -i CHANGELOG.md -s -r 0 && pnpm prettier",
    "prettier": "prettier --config .prettierrc --write ./**/*.md",
    "lint": "eslint --ext .ts . --fix",
    "vitest": "vitest",
    "vitest:c": "vitest run --coverage",
    "vitest:u": "vitest --coverage --ui",
    "postinstall": "npx only-allow pnpm",
    "prepare": "husky install"
  },
  "keywords": [
    "Project CLI"
  ],
  "author": "Noah Yu",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Noah-Ywh/project-cli.git"
  },
  "homepage": "https://projectcli.paint-js.com",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "ejs": "^3.1.9",
    "execa": "^8.0.1",
    "fs-extra": "^11.1.1",
    "globby": "^14.0.0",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1",
    "parse-json": "^8.1.0",
    "progress": "^2.0.3",
    "semver": "^7.5.4",
    "tslib": "^2.6.2",
    "validate-npm-package-name": "^5.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.9.4",
    "@types/parse-json": "^4.0.2",
    "@types/progress": "^2.0.7",
    "@types/semver": "^7.5.6",
    "@types/validate-npm-package-name": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "commitizen": "^4.3.0",
    "compare-func": "^2.0.0",
    "conventional-changelog-angular": "^7.0.0",
    "conventional-changelog-cli": "^4.1.0",
    "cz-git": "^1.7.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "rollup": "^4.5.1",
    "rollup-plugin-copy": "^3.5.0",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
