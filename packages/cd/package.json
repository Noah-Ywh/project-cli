{
  "name": "@noahyu/cd-cli",
  "version": "1.2.2",
  "description": "Global CLI tool for simple project deployment with version management",
  "type": "module",
  "main": "./dist/bin/cli.js",
  "files": [
    "/dist"
  ],
  "bin": {
    "pcli-cd": "./dist/bin/cli.js"
  },
  "scripts": {
    "build": "rollup -c",
    "build:w": "rollup -c -w",
    "changelog": "conventional-changelog -n '../../changelog.config.js' -i CHANGELOG.md -s -r 0 -k ./package.json --commit-path ./",
    "prettier": "prettier --config .prettierrc --write ./**/*.md",
    "vitest": "vitest",
    "vitest:c": "vitest run --coverage",
    "vitest:u": "vitest --coverage --ui"
  },
  "keywords": [
    "deployment",
    "ci-cd",
    "cli",
    "global",
    "version-management",
    "zero-downtime"
  ],
  "author": "Noah Yu",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noahyu4882/project-cli.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "ejs": "^3.1.10",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.1",
    "globby": "^14.1.0",
    "inquirer": "^12.9.3",
    "ora": "^8.2.0",
    "parse-json": "^8.3.0",
    "progress": "^2.0.3",
    "semver": "^7.7.2",
    "tslib": "^2.8.1",
    "validate-npm-package-name": "^6.0.2",
    "node-ssh": "^13.2.0",
    "archiver": "^7.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^24.3.0",
    "@types/parse-json": "^7.0.0",
    "@types/progress": "^2.0.7",
    "@types/semver": "^7.7.0",
    "@types/validate-npm-package-name": "^4.0.2",
    "@types/archiver": "^6.0.2",
    "rollup": "^4.46.3",
    "rollup-plugin-copy": "^3.5.0"
  }
}
